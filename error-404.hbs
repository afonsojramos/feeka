{{!< default}}

{{> "header"}}

<div class="error-template site-wrapper">

    <main id="site-main" class="site-main outer">
        <div class="inner">
            <section class="error-message">
                <h1 class="error-code">{{code}}</h1>
                <p class="error-description">{{message}}</p>
                <a class="error-link" href="{{@site.url}}">Go to the front page â†’</a>
            </section>
        </div>
    </main>

    {{#get "posts" limit="3"}}
    <aside class="outer">
        <div class="inner">
            <div class="post-feed">
                {{#foreach posts}}
                {{> "post-card"}}
                {{/foreach}}
            </div>
        </div>
    </aside>
    {{/get}}

</div>